@model Clothe

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbanailUrl" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Clothe" asp-action="Details" asp-route-id="@Model.ClotheId">@Model.Name</a>
            </h3>
            <p>@Model.Category.CategoryName</p>
        </div>
    </div>
</div>